<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id='view_visite_action' model='ir.actions.act_window'>
        <field name="name">Visites</field>
        <field name="res_model">visite.management</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre première visite
            </p>
            <p>
                Planifiez et suivez vos visites clients facilement.
            </p>
        </field>
</record>

<record id="view_visite_kanban" model="ir.ui.view">
    <field name="name">visite.management.kanban</field>
    <field name="model">visite.management</field>
    <field name="arch" type="xml">
        <kanban default_group_by="etat" class="o_kanban_small_column">
            <field name="name"/>
            <field name="client_id"/>
            <field name="date"/>
            <field name="nom"/>
            <field name="etat"/>
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_card oe_kanban_global_click">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                            </div>
                            <div>
                                <i class="fa fa-user"/> <field name="client_id"/>
                            </div>
                            <div>
                                <i class="fa fa-calendar"/> <field name="date"/>
                            </div>
                            <div>
                                <strong>Objet:</strong> <field name="nom"/>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

<record id="view_visite_form" model="ir.ui.view">
        <field name="name">visite.management.form</field>
        <field name="model">visite.management</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start" string="Démarrer" type="object" class="oe_highlight" invisible="etat != 'planned'"/>
                    <button name="action_complete" string="Terminer" type="object" class="oe_highlight" invisible="etat != 'in_progress'"/>
                    <button name="action_cancel" string="Annuler" type="object" invisible="etat in ['done', 'cancelled']"/>
                    <button name="action_create_result" string="Créer Résultat" type="object" class="oe_highlight" invisible="etat != 'done' or result_id"/>
                    <field name="etat" widget="statusbar" statusbar_visible="planned,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="client_id" options="{'no_create': True}"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="nom"/>
                            <field name="result_id" readonly="1" invisible="not result_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Notes sur la visite..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<record id="visiteur_view_list" model="ir.ui.view">
        <field name="name">visite.management.tree</field>
        <field name="model">visite.management</field>
        <field name="arch" type="xml">
            <tree decoration-info="etat=='planned'" decoration-success="etat=='done'" decoration-muted="etat=='cancelled'">
                <field name="name"/>
                <field name="date"/>
                <field name="client_id"/>
                <field name="nom"/>
                <field name="etat" widget="badge" decoration-info="etat=='planned'" decoration-success="etat=='done'" decoration-warning="etat=='in_progress'" decoration-danger="etat=='cancelled'"/>
            </tree>
        </field>
</record>

<record id="view_visite_search" model="ir.ui.view">
        <field name="name">visite.management.search</field>
        <field name="model">visite.management</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="client_id"/>
                <field name="nom"/>
                <filter string="Planifiées" name="planned" domain="[('etat', '=', 'planned')]"/>
                <filter string="En cours" name="in_progress" domain="[('etat', '=', 'in_progress')]"/>
                <filter string="Terminées" name="done" domain="[('etat', '=', 'done')]"/>
                <separator/>
                <filter string="Aujourd'hui" name="today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Cette semaine" name="this_week" domain="[('date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="État" name="group_etat" context="{'group_by': 'etat'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
</record>

<record id="view_visite_calendar" model="ir.ui.view">
        <field name="name">visite.management.calendar</field>
        <field name="model">visite.management</field>
        <field name="arch" type="xml">
            <calendar string="Calendrier des visites" date_start="date" color="etat" mode="month">
                <field name="client_id"/>
                <field name="nom"/>
                <field name="etat"/>
            </calendar>
        </field>
</record>


