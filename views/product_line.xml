<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id='visite_product_line_action_form' model='ir.actions.act_window'>
    <field name="name">Lignes de produits</field>
    <field name="res_model">visite.product.line</field>
    <field name="view_mode">tree,form,graph</field>
</record>
    <record id="view_visite_product_line_form" model="ir.ui.view">
        <field name="name">visite.product.line.form</field>
        <field name="model">visite.product.line</field>
        <field name="arch" type="xml">
            <form string="Ligne de Produit">
                <group>
                    <field name="visite_id"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="unit_price" readonly="1"/>
                    <field name="subtotal" readonly="1"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_visite_product_line_tree" model="ir.ui.view">
        <field name="name">visite.product.line.tree</field>
        <field name="model">visite.product.line</field>
        <field name="arch" type="xml">
            <tree string="Lignes de Produits">
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="unit_price" readonly="1"/>
                <field name="subtotal" readonly="1"/>
            </tree>
        </field>
    </record>
    <record id="visite_product_line_graph_view" model="ir.ui.view">
    <field name="name">visite.product.line.graph</field>
    <field name="model">visite.product.line</field>
    <field name="arch" type="xml">
        <graph string="Produits vendus par QuantitÃ©" type="bar">
            <field name="quantity" type="measure"/>
            <field name="product_id" type="row"/>
        </graph>
    </field>
</record>
</odoo>
