<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste des tags -->
    <record id="visite_tag_view_tree" model="ir.ui.view">
        <field name="name">visite.tag.tree</field>
        <field name="model">visite.tag</field>
        <field name="arch" type="xml">
            <tree string="Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <!-- Action pour les tags -->
    <record id="visite_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">visite.tag</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau tag
            </p>
            <p>
                Les tags permettent de catégoriser vos visites.
            </p>
        </field>
    </record>
</odoo>
