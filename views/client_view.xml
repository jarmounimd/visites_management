<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='visite_client_action1' model='ir.actions.act_window'>
        <field name="name">Clients</field>
        <field name="res_model">visite.client</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id='visite_client_view_form' model='ir.ui.view'>
        <field name="name">visite.client.form</field>
        <field name="model">visite.client</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informations personnelles">
                            <field name="name"/>
                            <field name="prenom"/>
                            <field name="mobile"/>
                            <field name="email" widget="email"/>
                        </group>
                        <group string="Adresse">
                            <field name="adresse"/>
                            <field name="ville"/>
                            <field name="pays"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Visites" name="visites">
                            <field name="visite_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="nom"/>
                                    <field name="etat" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="RÃ©sultats" name="results">
                            <field name="result_ids">
                                <tree>
                                    <field name="date_visite"/>
                                    <field name="total_price"/>
                                    <field name="note" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='visite_client_view_tree' model='ir.ui.view'>
        <field name="name">visite.client.tree</field>
        <field name="model">visite.client</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name"/>
                <field name="ville"/>
                <field name="pays"/>
                <field name="mobile"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id='visite_client_view_search' model='ir.ui.view'>
        <field name="name">visite.client.search</field>
        <field name="model">visite.client</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="prenom"/>
                <field name="email"/>
                <field name="mobile"/>
                <field name="ville"/>
                <field name="pays"/>
                <group expand="0" string="Grouper par">
                    <filter string="Ville" name="group_ville" context="{'group_by': 'ville'}"/>
                    <filter string="Pays" name="group_pays" context="{'group_by': 'pays'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>