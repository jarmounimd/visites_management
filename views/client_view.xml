<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='visite_client_action1' model='ir.actions.act_window'>
        <field name="name">Clients</field>
        <field name="res_model">visite.client</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajouter votre premier client
            </p>
            <p>
                Enregistrez les informations de vos clients pour planifier des visites.
            </p>
        </field>
    </record>

    <record id='visite_client_view_kanban' model='ir.ui.view'>
        <field name="name">visite.client.kanban</field>
        <field name="model">visite.client</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="prenom"/>
                <field name="display_name"/>
                <field name="email"/>
                <field name="mobile"/>
                <field name="ville"/>
                <field name="pays"/>
                <field name="category"/>
                <field name="loyalty_badge"/>
                <field name="total_revenue"/>
                <field name="client_score"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <i class="fa fa-user"/> <field name="display_name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-envelope"/> <field name="email"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-phone"/> <field name="mobile"/>
                                    </div>
                                    <div t-if="record.ville.raw_value">
                                        <i class="fa fa-map-marker"/> <field name="ville"/>, <field name="pays"/>
                                    </div>
                                    <div class="mt-2">
                                        <field name="category" widget="badge"/>
                                        <field name="loyalty_badge" widget="badge"/>
                                    </div>
                                    <div class="mt-1">
                                        <strong>ðŸ’° CA:</strong> <field name="total_revenue"/> DH
                                        | <strong>ðŸ“Š Score:</strong> <field name="client_score"/>/100
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id='visite_client_view_form' model='ir.ui.view'>
        <field name="name">visite.client.form</field>
        <field name="model">visite.client</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- Statistiques en haut -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" icon="fa-calendar" name="action_view_visits">
                            <field name="total_visits" widget="statinfo" string="Visites"/>
                        </button>
                        <button class="oe_stat_button" type="object" icon="fa-money" name="action_view_results">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="total_revenue"/> DH</span>
                                <span class="o_stat_text">Chiffre d'Affaires</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" icon="fa-shopping-cart" name="action_view_results">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="avg_purchase"/> DH</span>
                                <span class="o_stat_text">Panier Moyen</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" icon="fa-percent" name="action_view_results">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="success_rate"/>%</span>
                                <span class="o_stat_text">Taux de Conversion</span>
                            </div>
                        </button>
                    </div>
                    
                    <!-- Badges -->
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="category" widget="badge"/>
                            <field name="loyalty_badge" widget="badge" class="ml-2"/>
                            <span class="ml-3 badge badge-info">Score: <field name="client_score"/>/100</span>
                        </h3>
                    </div>
                    <group>
                        <group string="Informations personnelles">
                            <field name="name"/>
                            <field name="prenom"/>
                            <field name="mobile"/>
                            <field name="email" widget="email"/>
                        </group>
                        <group string="Adresse">
                            <field name="adresse"/>
                            <field name="ville"/>
                            <field name="pays"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Visites" name="visites">
                            <field name="visite_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="nom"/>
                                    <field name="etat" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="RÃ©sultats" name="results">
                            <field name="result_ids">
                                <tree>
                                    <field name="date_visite"/>
                                    <field name="total_price"/>
                                    <field name="note" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id='visite_client_view_tree' model='ir.ui.view'>
        <field name="name">visite.client.tree</field>
        <field name="model">visite.client</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name"/>
                <field name="ville"/>
                <field name="pays"/>
                <field name="mobile"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id='visite_client_view_search' model='ir.ui.view'>
        <field name="name">visite.client.search</field>
        <field name="model">visite.client</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="prenom"/>
                <field name="email"/>
                <field name="mobile"/>
                <field name="ville"/>
                <field name="pays"/>
                <group expand="0" string="Grouper par">
                    <filter string="Ville" name="group_ville" context="{'group_by': 'ville'}"/>
                    <filter string="Pays" name="group_pays" context="{'group_by': 'pays'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>