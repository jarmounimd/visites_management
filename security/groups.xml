<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_visites" model="ir.module.category">
        <field name="name">Gestion des Visites</field>
        <field name="description">Catégorie pour la gestion des visites clients</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_visite_user" model="res.groups">
        <field name="name">Utilisateur</field>
        <field name="category_id" ref="module_category_visites"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">L'utilisateur peut créer et voir ses propres visites et clients.</field>
    </record>
    
    <record id="group_commercial" model="res.groups">
        <field name="name">Commercial</field>
        <field name="category_id" ref="module_category_visites"/>
        <field name="implied_ids" eval="[(4, ref('group_visite_user'))]"/>
        <field name="comment">Le commercial peut gérer toutes les visites, clients et résultats.</field>
    </record>

    <record id="group_admin_visite" model="res.groups">
        <field name="name">Administrateur</field>
        <field name="category_id" ref="module_category_visites"/>
        <field name="implied_ids" eval="[(4, ref('group_commercial'))]"/>
        <field name="comment">L'administrateur a tous les droits sur le module visites.</field>
    </record>
</odoo>